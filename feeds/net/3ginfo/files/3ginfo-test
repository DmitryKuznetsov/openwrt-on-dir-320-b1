#!/bin/sh

# (c) 2010-2011 Cezary Jackiewicz <cezary@eko.one.pl>

DEVICE=$(uci -q get 3ginfo.@3ginfo[0].device)
if [ ! -e $DEVICE ]; then
	echo "Brak urzadzenia $DEVICE!"
	exit 0
fi

# gcom -d $DEVICE reg
O=$(gcom -d $DEVICE -s /usr/share/3ginfo/scripts/3ginfo.gcom)

echo "$O"

echo "---------------------------------------------------------------"
ls /dev/tty*
echo "---------------------------------------------------------------"
cat /proc/bus/usb/devices
echo "---------------------------------------------------------------"
uci show 3ginfo

exit 0
